{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-6 mx-auto">
            {{ form_start(form, {attr: {novalidate: 'novalidate'} } ) }} {# <form action="" novalidate> #}

                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.nom) }}
                    </div>
                </div>

            {{ form_row(form.email) }}
            {{ form_row(form.age) }}
            {{ form_row(form.profession) }}

            <button type="submit">Valider</button>

            {{ form_end(form) }} {# </form> #}
        </div>
    </div>

{% endblock %}